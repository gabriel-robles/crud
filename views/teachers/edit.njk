{% extends "layout.njk" %}

{% block head %}
    <title>Teacher Finder</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">
            <form method="POST" action="/teachers?_method=PUT">
                <h3>Editar professor</h3>

                {% include "teachers/fields.njk" %}

                <input type="hidden" name="id" value="{{teacher.id}}">

                <button id="btn-save" type="submit">Salvar</button>
            </form>

            <form id="btn-delete" method="POST" action="/teachers?_method=DELETE">
                <button type="submit">Deletar</button>

                <input type="hidden" name="id" value="{{teacher.id}}">
            </form>
        </section>
    </div>

    {% include "confirm.njk" %}

{% endblock content %}