{% extends "layout.njk" %}

{% block head %}
    <title>Teacher Finder</title>
    <link rel="stylesheet" href="/style/teacher.css">
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{teacher.schooling}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    {{ "Presencial" if teacher.type_class == "P" else "À distância" }}
                </div>
            </div>

            <div class="item">
                <div>Acompanhmento</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}