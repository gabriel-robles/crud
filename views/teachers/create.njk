{% extends "layout.njk" %}

{% block head %}
    <title>Teacher Finder</title>
    <link rel="stylesheet" href="/style/create.css">
{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/1603248/500x500) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Cadastrar novo professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" placeholder="Nome Completo">
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>
                    <select name="schooling">
                        <option value="EM">Ensino Médio Completo</option>
                        <option value="ES">Ensino Superior Completo</option>
                        <option value="M">Mestrado</option>
                        <option value="D">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span>
                        <input type="radio" name="type_class" value="P" checked>Presencial
                    </span>

                    <span>
                        <input type="radio" name="type_class" value="D">À distância
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Areá de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os seviços prestados por vírgula">
                </div>
            </div>

            <button type="submit">Cadastrar</button>

        </section>
    </form>
{% endblock content %}