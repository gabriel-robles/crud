{% extends "layout.njk" %}

{% block head %}
    <title>Teacher Finder</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Aluno</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{student.age}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{student.birth}}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{student.school_year}}</div>
            </div>

            <div class="item">
                <div>Carga Horária Semanal</div>
                <div>{{student.workload}} Horas</div>
            </div>

            <a href="/students/{{student.id}}/edit" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}