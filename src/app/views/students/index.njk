{% extends "layout.njk" %}

{% block head %}
    <title>Teacher Finder</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a href="/students/create" class="button">Novo</a>
            <form action="/students" method="GET">
                <input type="text" name="find" placeholder="Buscar Aluno ou Ano Escolar" value="{{find}}">
                <button type="submit">Buscar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Nome completo</th>
                    <th>E-mail</th>
                    <th>Ano Escolar</th>
                    <th></th>
                </th>
            </thead>

            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span></td>
                        <td>{{student.name}}</td>
                        <td>{{student.email}}</td>
                        <td>{{student.school_year}}</td>
                        <td>
                            <a href="/students/{{student.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-find={{find}}></div>
    </div>

    <script src="/scripts/pagination.js"></script>
{% endblock content %}